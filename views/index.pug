extends layout 
block home
    .row 
        each db in datas
            .col-3
                .card_product
                    .card_img(userId = "/product/add/" + db.id)
                        .cardImg 
                            img(src=""+db.photo alt="rasm")
                        span.sale= db.sale
                    .card_text
                        h2= db.title
                        p.price= db.price
                            |   $
                        p.sale_price= db.price - (db.price * db.sale / 100)
                            |   $
                        .card_bottom 
                            span.like(userId  = "/" + db.id) 
                                i.far.fa-heart
                                small.write_like= db.like 
                            .flex
                                span  date  
                                span.date= db.date.toDateString()